<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Offer image -->
    <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp" app:srcCompat="@drawable/ic_pro"
            android:id="@+id/icon" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>

    <!-- Offer heading -->
    <TextView
            android:text="@string/offer_heading"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:id="@+id/offerHeading"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/colorBlack"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toEndOf="@+id/icon" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <!-- Offer description -->
    <TextView
            android:text="@string/offer_description"
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:id="@+id/offerDescription" app:layout_constraintStart_toEndOf="@+id/icon"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/offerHeading"/>

</androidx.constraintlayout.widget.ConstraintLayout>